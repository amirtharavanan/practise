import java.io.*;
import java.util.*;
public class longpalin
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
StringBuffer sb=new StringBuffer(System.in);
StringBuffer t=new StringBuffer(" ");
StringBuffer t1=new StringBuffer(" ");
StringBuffer res=new StringBuffer(" ");
StringBuffer temp=new SringBuffer(" ");
int max=0;
{
for(int i=0;i<sb.length-1;i++)
{
for(int j=i+1;j<sb.length-1;j++)
{
				t=new StringBuffer(sb.substring(i,j));
				t1=new StringBuffer(sb.substring(i,j));
				t1.reverse();
				
				if((t.toString()).equals(t1.toString())&&t.length()>max)
				{
					max=t.length();
					res=t;
					
				}
				
			}
			System.out.println(res);
	}
}
